CFLAGS=-std=c++11

out: Neuron.o
    g++ Neuron.o -o out

Neuron.o: Neuron.cpp Neuron.h
    g++ $(CFLAGS) 
tool: tool.o support.o
    g++ $(LDFLAGS) -o tool tool.o support.o $(LDLIBS) 

tool.o: tool.cc support.hh
    g++ $(CPPFLAGS) -c tool.cc

support.o: support.hh support.cc
    g++ $(CPPFLAGS) -c support.cc